<main role="main">

  <section class="jumbotron text-center">
    <div class="container-fluid">
      <div class="" >
        <h1 class="jumbotron-heading ">Album </h1>
        <img src="https://p4.wallpaperbetter.com/wallpaper/380/501/99/rolling-waves-ocean-waves-hd-4k-wallpaper-preview.jpg" width="100%" height="200px">
      </div>
    </div>
  </section>

      <div class="album py-5 bg-light">
    <div class="container">
      <div class="row gy-5" >
        <% var a = Math.random()*10;
        var b = parseInt(a);
        for(let i = 0; i < Da2.length; i++) {%>
          <%const dt = Da2[i].linkanh %>
          <%const dt2 = Da2[i].noidung %>
          <%const dt3= Da2[i]._id %>
        <div class="col-4 " style="height: auto;width: auto" >
          <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%=dt%>"  style=" height: 250px; width: 100%; display: block;">
            <div class="card-body " >
              <div  class="container-fluid"   >
                <p class="m-1"><%=dt2%> </p>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">

                  <form method="post" action="/btnxoa"  enctype="application/x-www-form-urlencoded">
                    <input hidden name="idAnh" value="<%=dt3%>">
                    <button class="btn btn-sm btn-outline-secondary" type="submit">Xoa</button>
                  </form>
                  <form method="post" action="/btnsua"  enctype="application/x-www-form-urlencoded">
                    <input hidden name="idAnh2" value="<%=dt3%>">

                    <button class="btn btn-sm btn-outline-secondary"  name="sua" type="submit">Sua</button>

                  </form>
                </div>

                <small class="text-muted"><%=b%> mins</small>
              </div>
            </div>
          </div>
          <%}%>

        </div>

      </div>
    </div>
  </div>

</main>

